@model SDCEventTracker.Models.Event

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EventName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EventName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zip)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MorningHunt)
        </dt>

        <dd>
            @{
                if ((bool)Model.MorningHunt)
                { <p>Yes</p> }
                else
                { <p>No</p> }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EveningHunt)
        </dt>

        <dd>
            @{
                if ((bool)Model.EveningHunt)
                {  <p>Yes</p>  }
                else
                { <p>No</p> }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BenchShow)
        </dt>

        <dd>
            @{
                if ((bool)Model.BenchShow)
                {  <p>Yes</p>  }
                else
                { <p>No</p> }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BarkingContest)
        </dt>

        <dd>
            @{
                if ((bool)Model.BarkingContest)
                {  <p>Yes</p>  }
                else
                { <p>No</p> }
            }
        </dd>

    </dl>
</div>
