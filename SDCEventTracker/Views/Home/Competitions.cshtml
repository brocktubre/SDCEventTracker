@model IEnumerable<SDCEventTracker.Models.Event>

<h2>@ViewBag.Title</h2>

<div class="alert alert-warning shadow col-md-6 ">

        <div class="col-md-8">
            <h2> Submit Hunt Here! </h2>
        </div>
        <div class="col-md-4">
            <button type="button" class="btn btn-warning">@Html.ActionLink("Submit New Hunt", "Create")<i class="fa fa-file-text-o"></i></button>
        </div>
    </div>


<div class="container">
    <div class="col-md-3 col-md-offset-9 col-sm-3 col-sm-offset-9">
        <form method="get" action="@Url.Action("Competitions", "Home")">
            <div class="input-group">

                <input type="text" id="search" name="searchString" class="form-control">
                <span class="input-group-btn">
                    <button class="btn btn-success" type="submit"><i class="fa fa-search" style="color: white; padding: 3px 0;"></i></button>
                </span>


            </div>
        </form>
    </div>
</div>

<div class="event-table">
    <table class="table">
        <tr id="top-row">
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            // Colors the past hunt grey, bold and blacks the future hunts
            var style = "color: black; font-weight: bold;";
            var isPast = item.Date < DateTime.Now;
            if (isPast) { style = "color: grey;"; }

            <tr style="@style">
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
            </tr>

        }
    </table>
</div>
