@model IEnumerable<SDCEventTracker.Models.Result>

@{
    ViewBag.Title = "Event Results";
}

<h2>EventResults</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model) { 
    if(item.EventEnum.ID == 1 ) //Morning Hunt
    { <h1> Morning Hunt</h1> }
    else { <h1> Evening Hunt </h1> }
<table class="table">
    <tr id="top-row">
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HandlerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DogID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Handler.FirstName) @Html.DisplayFor(modelItem => item.Handler.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dog.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventEnum.EventType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}
}

</table>